---
export interface Props {
  title: string;
  description: string;
  severity?: 'low' | 'moderate' | 'high';
  href?: string;
}

const { title, description, severity = 'moderate', href } = Astro.props;

const severityLabels = {
  low: 'Concerning',
  moderate: 'Harmful',
  high: 'Dangerous'
};

const severityColors = {
  low: '#6B7B8C',
  moderate: '#C17F59',
  high: '#B8533E'
};
---

<div class="pattern-card">
  <div class="pattern-header">
    <h3 class="pattern-title">
      {href ? <a href={href}>{title}</a> : title}
    </h3>
    <span class="pattern-severity" style={`--severity-color: ${severityColors[severity]}`}>
      {severityLabels[severity]}
    </span>
  </div>
  <p class="pattern-desc">{description}</p>
  <div class="pattern-content">
    <slot />
  </div>
  {href && (
    <a href={href} class="pattern-link">
      Learn more
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="5" y1="12" x2="19" y2="12"></line>
        <polyline points="12 5 19 12 12 19"></polyline>
      </svg>
    </a>
  )}
</div>

<style>
  .pattern-card {
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    transition: all var(--transition-base);
  }
  
  .pattern-card:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--color-border);
  }
  
  .pattern-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }
  
  .pattern-title {
    font-size: var(--text-lg);
    margin: 0;
  }
  
  .pattern-title a {
    color: inherit;
    text-decoration: none;
  }
  
  .pattern-title a:hover {
    color: var(--color-primary);
  }
  
  .pattern-severity {
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--severity-color);
    background-color: color-mix(in srgb, var(--severity-color) 10%, transparent);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-full);
    white-space: nowrap;
  }
  
  .pattern-desc {
    color: var(--color-text-light);
    font-size: var(--text-sm);
    margin-bottom: var(--space-md);
  }
  
  .pattern-content {
    font-size: var(--text-sm);
  }
  
  .pattern-content :global(ul) {
    margin: 0;
    padding-left: var(--space-lg);
  }
  
  .pattern-content :global(li) {
    margin-bottom: var(--space-xs);
  }
  
  .pattern-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    margin-top: var(--space-md);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-primary);
    text-decoration: none;
  }
  
  .pattern-link:hover {
    text-decoration: underline;
  }
</style>
