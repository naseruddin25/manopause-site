    font-size: var(--text-lg);
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.95;
  }
  
  .age-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
    margin-top: var(--space-xl);
  }
  
  .age-card {
    text-align: center;
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: white;
    transition: transform var(--transition-fast);
  }
  
  .age-card:hover {
    transform: translateY(-4px);
  }
  
  .age-card.kids { background: linear-gradient(135deg, #10b981, #059669); }
  .age-card.teens { background: linear-gradient(135deg, #6366f1, #4f46e5); }
  .age-card.adults { background: linear-gradient(135deg, #8b5cf6, #7c3aed); }
  
  .age-emoji {
    font-size: var(--text-4xl);
    display: block;
    margin-bottom: var(--space-md);
  }
  
  .age-card h3 {
    color: white;
    margin: 0 0 var(--space-xs) 0;
  }
  
  .age-card p {
    margin: 0;
    opacity: 0.9;
    font-size: var(--text-sm);
  }
  
  .section-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-md);
    border-bottom: 3px solid;
  }
  
  .section-header.kids { border-color: #10b981; }
  .section-header.teens { border-color: #6366f1; }
  .section-header.adults { border-color: #8b5cf6; }
  
  .section-emoji {
    font-size: var(--text-3xl);
  }
  
  .section-header h2 {
    margin: 0;
  }
  
  /* Kids section styles */
  .big-text {
    font-size: var(--text-lg);
    line-height: 1.6;
  }
  
  .truth-box {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    margin: var(--space-xl) 0;
  }
  
  .truth-box h4 {
    margin-top: 0;
    color: white;
  }
  
  .simple-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .simple-list li {
    margin-bottom: var(--space-md);
    font-size: var(--text-lg);
  }
  
  .action-cards-simple {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-md);
    margin: var(--space-xl) 0;
  }
  
