</BaseLayout>

<style>
  .legal-page {
    --primary: #2563eb;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem 4rem;
  }

  .page-header {
    margin-bottom: 3rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .category-label {
    display: inline-block;
    background: #eff6ff;
    color: var(--primary);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #1e293b;
    margin-bottom: 0.5rem;
  }

  .last-updated {
    color: #64748b;
    font-size: 0.95rem;
  }

  .content section {
    margin-bottom: 2.5rem;
  }

  .content h2 {
    font-size: 1.35rem;
    color: #1e293b;
    margin-bottom: 1rem;
  }

  .content p {
    color: #475569;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .content ul {
    color: #475569;
    line-height: 1.8;
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .content li {
    margin-bottom: 0.5rem;
  }

  .content a {
    color: var(--primary);
  }

  .content a:hover {
    text-decoration: underline;
  }

  .highlight-box {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border: 1px solid #fcd34d;
    border-radius: 1rem;
    padding: 1.5rem 2rem;
  }

  .highlight-box h2 {
    color: #92400e;
    margin-top: 0;
    font-size: 1.25rem;
  }

  .highlight-box p {
    color: #92400e;
    margin: 0;
  }

  .note {
    font-size: 0.9rem;
    color: #64748b;
    font-style: italic;
  }

  .related-links {
    padding-top: 1.5rem;
    border-top: 1px solid #e2e8f0;
    margin-top: 3rem;
  }

  .related-links h2 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }

  .link-list {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .link-list a {
    padding: 0.5rem 1rem;
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 0.375rem;
    text-decoration: none;
    color: #475569;
    font-size: 0.95rem;
    transition: border-color 0.2s, color 0.2s;
  }

  .link-list a:hover {
    border-color: var(--primary);
    color: var(--primary);
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .highlight-box {
      padding: 1.25rem 1.5rem;
    }
  }
</style>
