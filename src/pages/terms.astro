<BaseLayout 
  title="Terms of Use | Manopause"
  description="Terms and conditions for using the Manopause educational resource website."
>
  <main class="legal-page">
    <div class="container">
      <header class="page-header">
        <span class="category-label">Legal</span>
        <h1>Terms of Use</h1>
        <p class="last-updated">Last updated: December 2024</p>
      </header>

